<link href="~/Content/Style.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead"></p>
            <div class="list-group">
                <a href="@Url.Action("Low", "LMH")" class="list-group-item">Low End</a>
