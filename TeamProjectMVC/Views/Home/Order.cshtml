@model TeamProjectMVC.Models.ShoppingCart
@{
    ViewBag.Title = "Order";
    ViewBag.Message = "Your cart is empty!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Order</h2>

 <b>@ViewBag.User</b> <br /><br />
@foreach (var product in Model.Products)
{
 <div>   
     <table>
            <tr>
         <td>@product.ProductName</td> <td>@product.Price</td>
         </tr>
          
         
         </table>
   </div>

}

<br />

<p>Quantiy: @Model.Products.Count</p> <br />

<p>Your ShoppingCart : @Model.Price</p>
@if (Model.Products.Count == 0)
{
    <p>@ViewBag.Message</p>
    @Html.ActionLink("Back to Products", "Products")
}
else
{
    @Html.ActionLink("Proceed Order", "SendOrder")
}

    



